{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                ".nuxt/**",
                "!.nuxt/cache/**"
            ]
        },
        "dev": {
            "persistent": true,
            "cache": false
        },
        "lint": {
            "dependsOn": [
                "^lint"
            ]
        },
        "check-types": {
            "dependsOn": [
                "^check-types"
            ]
        },
        "clean": {
            "cache": false
        }
    }
}